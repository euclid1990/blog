<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-block alert-danger fade in">
    	<b>The form contains <%= pluralize(object.errors.count, "error") %>.</b>
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>